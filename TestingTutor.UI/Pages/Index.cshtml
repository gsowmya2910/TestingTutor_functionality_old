@page
@using UI.Pages
@model UI.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

@{
    HttpContext.Request.Cookies.TryGetValue("testingtutor.org.Theme", out var theme);

    var image = "images/blue-retro.png";

    switch (theme)
    {
        case "default":
        case "cerulean":
        case "cosmo":
        case "flatly":
        case "journal":
        case "litera":
        case "lumen":
        case "lux":
        case "materia":
        case "minty":
        case "pulse":
        case "sandstone":
        case "simplex":
        case "sketchy":
        case "spacelab":
        case "united":
        case "yeti":
            image = "images/blue-retro.png";
            break;
        case "cyborg":
        case "darkly":
        case "slate":
        case "solar":
        case "superhero":
            image = "images/white-retro.png";
            break;
        default:
            break;
    }
}


