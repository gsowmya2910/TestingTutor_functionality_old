@using Microsoft.AspNetCore.Identity
@using TestingTutor.Dev.Data.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <a class="py-2 d-none d-md-inline-block" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.Users.Single(u => u.Email.Equals(User.Identity.Name)).FirstName!</a>
        <button type="submit" class="btn btn-link" style="color:#7aa5d2;">Logout</button>
    </form>
}
else
{
    <a class="py-2 d-none d-md-inline-block" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="py-2 d-none d-md-inline-block" asp-area="Identity" asp-page="/Account/Login">Login</a>
}