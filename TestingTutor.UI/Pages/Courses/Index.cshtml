@page
@model TestingTutor.UI.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
@foreach (var course in Model.Course)
{
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h2 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#course_@course.Id">
                        @course.CourseName
                    </button>
                </h2>
            </div>
        </div>
        <div id="course_@course.Id" class="collapse">
            <div class="card-body">
                <div class="card-title">
                    <h1>
                        @course.CourseName
                    </h1>
                </div>
                <p class="lead">
                    @course.Term.Name
                </p>
                <p class="lead">
                    @course.Institution.Name
                </p>
                <div class="mx-auto text-center">
                    <div class="btn-group">
                        <a class="btn btn-primary text-light" role="button" asp-page="./Edit" asp-route-id="@course.Id">Edit</a>
                        <a class="btn btn-primary text-light" role="button" asp-page="./Delete" asp-route-id="@course.Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}